<%= semantic_form_for resource, :html => { :multipart => true } do |form| %>
  <%= form.inputs do %>
    <%= form.input :name, :label => "Data Set Name" %>
		<%= form.input :organization, :as => :select, :collection => Organization.find(:all, :order => "name") %>
		<%= form.input :categories, :as => :check_boxes, :collection => Category.find(:all, :order => "name") %>
		
    <%= form.input :description %>
    <%= form.input :data_format %>
    <%= form.input :cost %>
		<label>Start Date</label>
    <%= form.input :period_start_date, :as => "date", :start_year => 1980, :end_year => Time.now.year %>
    <label>End Date</label>
		<%= form.input :period_end_date, :as => "date", :start_year => 1980, :end_year => Time.now.year %>
    <%= form.input :update_frequency %>
    <%= form.input :documentation_url, :as => :string  %>
    <%= form.input :tag_list %>
		<%= form.input :samplefile, :as => :file %> 


		<div class="form_admin_only">
			<h3>Admin Only</h3>
			<%= form.input :notes %>
			<%= form.input :status, :as => :select, :collection => ["unpublished", "published", "archived"] %>
		</div>

  <% end %>

	<% form.buttons do %>
		<%= form.commit_button %><%= link_to 'cancel', resource %>
	<% end %>
<% end %>