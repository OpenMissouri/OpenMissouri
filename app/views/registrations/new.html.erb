<% title 'Sign up' %>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form| %>
  <%= form.inputs do %>
    <%= form.input :first_name, :required => true %>
		<%= form.input :last_name, :required => true %>
    <%= form.input :email, :required => true, :as => :string %>
    <% if resource.password_required? %>
      <%= form.input :password, :required => true %>
      <%= form.input :password_confirmation, :required => true %>
    <% end %>
	<%= recaptcha_tags %>
  <% end %>


  <%= form.buttons do %>

    <%= form.commit_button 'Sign up' %>
  <% end %>
<% end %>

<%= render :partial => 'devise/shared/links' %>
