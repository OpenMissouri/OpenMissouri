<%= semantic_form_for(resource) do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
		<%= form.input :government_level, :as => :select, :collection => GovernmentLevel.find(:all) %>
    <%= form.input :governement_entity_name %>
    <%= form.input :agency_head %>
    <%= form.input :sunshine_contact %>
    <%= form.input :sunshine_title %>
    <%= form.input :sunshine_phone, :as => "string" %>
    <%= form.input :sunshine_email, :as => "string" %>
    <%= form.input :website, :as => "string" %>
    <%= form.input :description %>
    <%= form.input :address1 %>
    <%= form.input :address2 %>
    <%= form.input :city %>
    <%= form.input :state %>
    <%= form.input :postal_code %>
    <%= form.input :notes %>
    <%= form.input :fax, :as => "string" %>
		<%= form.input :status, :as => :select, :collection => ["unpublished", "published", "archived"] %>

    <p><%#= form.input :accepts_email_requests %></p>

  <% end %>

  <%= form.buttons %> or <%= link_to 'cancel', resource %> | <%= link_to 'Delete agency', @organization, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
