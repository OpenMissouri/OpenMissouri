<% title 'Forgot your password?' %>

<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |form| %>
  <%= form.inputs do %>
    <%= form.input :email, :required => true %>
  <% end %>
  
  <%= form.buttons do %>
    <%= form.commit_button 'Send me reset password instructions' %>
  <% end %>
<% end %>